#! /usr/bin/env bash

WORKINGDIR=$(pwd)
VENVDIR="$HOME/workspace/venv"
PYVERSION="py3"
PROJECT=$1
[[ $PROJECT == "" ]] && PROJECT=$(basename $(pwd))

VENVNAME="$PROJECT-$PYVERSION"
VENV="$VENVDIR/$VENVNAME"

pyvenv $VENVDIR/$VENVNAME

.  $VENV/bin/activate
pip install -U setuptools pip
ln -s $VENV $WORKINGDIR/venv3
